<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/severityOk"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_weight="1"
        android:background="@color/colorAccentLegacy"
        />

    <ImageView
        android:id="@+id/severityLow"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_weight="1"
        android:background="@color/yellow_500" />

    <ImageView
        android:id="@+id/severityMid"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_weight="1"
        android:background="@color/orange_500" />

    <ImageView
        android:id="@+id/severityHi"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_weight="1"
        android:background="@color/red_500" />

    <ImageView
        android:id="@+id/severityVeryHi"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_weight="1"
        android:background="@color/red_900" />
</merge>
